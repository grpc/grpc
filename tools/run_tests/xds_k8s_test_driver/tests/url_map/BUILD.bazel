package(default_testonly = 1, default_visibility = ["//visibility:public"])

URL_MAP_TESTS = glob(["url_map/*_test.py"])

[
    py_test(
        name = test_file_name[:-3],
        size = "medium",
        timeout = "long"
        srcs = [test_file_name],
        args = [
            "--flagfile=\"config/grpc-testing.cfg\"",
            "--flagfile=\"config/url-map.cfg\"",
        ],
        data = [
            "//tools/run_tests/xds_k8s_test_driver/config/common.cfg",
            "//tools/run_tests/xds_k8s_test_driver/config/grpc-testing.cfg",
            "//tools/run_tests/xds_k8s_test_driver/config/url-map.cfg",
        ],
        imports = ["../../"],
        main = test_file_name,
        # To run the K8s framework, we need several more arguments.
        # tools/internal_ci/linux/grpc_xds_url_map.sh
        tags = ["manual"],
        python_version = "PY3",
        deps = [
            "//tools/run_tests/xds_k8s_test_driver:framework",
        ],
    )
    for test_file_name in URL_MAP_TESTS
]
