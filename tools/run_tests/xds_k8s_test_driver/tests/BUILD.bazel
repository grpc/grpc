package(default_testonly = 1, default_visibility = ["//visibility:public"])

XDS_K8S_TESTS = glob(["*_test.py"])

[
    py_test(
        name = test_file_name[:-3],
        size = "medium",
        timeout = "long",
        srcs = [test_file_name],
        args = [
            "--flagfile=\"config/grpc-testing.cfg\"",
        ],
        shard_count = 4,
        data = ["//config"],
        imports = ["../../"],
        main = test_file_name,
        python_version = "PY3",
        deps = [
            "//:framework",
        ],
    )
    for test_file_name in XDS_K8S_TESTS
]
