package(
    default_testonly = 1,
    default_visibility = ["//visibility:public"],
)

XDS_K8S_TESTS = glob(["*_test.py"])

test_suite(
    name = "basic_lb_tests",
    tests = [
        "affinity_test",
        "failover_test",
        "remove_neg_test",
        "round_robin_test",
        "change_backend_service_test",
    ],
)

[
    py_test(
        name = test_file_name[:-3],
        size = "medium",
        timeout = "eternal",
        srcs = [test_file_name],
        args = [
            "--flagfile=\"config/grpc-testing.cfg\"",
        ],
        data = ["//config"],
        imports = ["../../"],
        main = test_file_name,
        python_version = "PY3",
        deps = [
            "//:framework",
        ],
    )
    for test_file_name in XDS_K8S_TESTS
]
