{
      "name": "authz",
      "allow_rules": 
      [
            {
                  "name": "allow_echo",
                  "request": 
                  {
                        "paths": 
                        [
                              "*/Echo"
                        ],
                        "headers":
                        [
                              {
                                    "key": "key-foo",
                                    "values": ["foo1", "foo2"]
                              },
                              {
                                    "key": "key-bar",
                                    "values": ["bar1"]
                              }
                        ]
                  }
            }
      ],
      "deny_rules":
      [
            {
                  "name": "deny_clientstreamingecho",
                  "request":
                  {
                        "paths":
                        [
                              "*/ClientStreamingEcho"
                        ]
                  }
            }
      ]
}
